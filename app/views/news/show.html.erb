<div class="row">
	<div class="col-lg-6 col-lg-offset-3">
		<div class="row">
      <div class="col-lg-12">
        <h4><%= @news.title %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12"><%= @news.body.html_safe %></div>
    </div>
    <div class="row">
      <div class="col-lg-12"><small><i>posted by <%= @news.user.name %> on <%= @news.created_at.strftime("%-d %b %Y") %></i></small></div>
    </div>
	</div>
</div>
