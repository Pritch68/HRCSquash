<div class="col-md-4 col-md-offset-5">
  <h1>Enter a Score</h1>
  <%= simple_form_for(@score) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :date, :as => :date %>
      <%= f.association :homeplayer, collection: User.active.all.order('name'), label: "Player 1", prompt: "select player 1" %>
      <%= f.association :visitingplayer, collection: User.active.all.order('name'), label: "Player 2", prompt: "select player 2" %>
      <%= f.input :matchscore, 
        :collection => [[0, 'Won 3-0'], [1, 'Won 3-1'], [2, 'Won 3-2'],[3,'Lost 2-3'],[4,'Lost 1-3'],[5,'Lost 0-3']],
        :label => 'Score:', 
        :label_method => :last, 
        :value_method => :first,
        :input_html => { :class => 'rdo_inline' }, 
        :as => :radio_buttons %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, :value => "Save Score", class: "btn btn-large btn-primary" %>
    </div>
  <% end %>
  <%= link_to 'Back', root_path %>
</div>