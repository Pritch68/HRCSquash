<div class="row">
  <div class="col-lg-6 col-lg-offset-3" >
    <% if current_user.admin %>
      <div class="row">
        <div class="col-lg-12"><div style="float:left;"><%= link_to '<span class="glyphicon glyphicon-plus"></span> Create New Event'.html_safe, new_event_path, class: 'btn btn-primary btn-xs' %></div></div>
      </div>
    <% end %>
    <% @events.each do |event| %>
      <div class="row">
        <div class="col-lg-12">
          <h4><%= event.title %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">Starts: <%= event.startdate.strftime("%-d %b %Y") %></div>
      </div>
      <div class="row">
        <div class="col-lg-12">Ends: <%= event.enddate.strftime("%-d %b %Y") %></div>
      </div>
      <div class="row">
        <br /><div class="col-lg-12"><%= event.body.html_safe %></div>
      </div>
      <% if current_user.admin %>
        <div class="row">
          <div class="col-lg-12"><div style="float:left;"><%= link_to '<span class="glyphicon glyphicon-pencil"></span> Edit'.html_safe, edit_event_path(event), class: 'btn btn-primary btn-xs' %></div><div style="float:left;"><%= link_to '<span class="glyphicon glyphicon-trash"></span> Delete'.html_safe, event_path(event), class: 'btn btn-danger btn-xs', method: :delete %></div></div>
        </div>
      <% end %>
      <div class="row">&nbsp;</div>
    <% end %>
  </div>
</div>